<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>


    <style name="TextLargeRecyclerViewAdapter" parent="AppTheme">
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextNormalRecyclerViewAdapter" parent="AppTheme">
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

</resources>
